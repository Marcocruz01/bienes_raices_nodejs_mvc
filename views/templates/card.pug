div(class="bg-white shadow rounded-lg")
    img(src=`/uploads/${propiedad.imagen}`, alt=`imagen casa de ${propiedad.titulo}` class="object-cover h-72 w-full")
    div(class="p-5 space-y-2")
        h3(class="text-2xl font-bold")= propiedad.titulo
        p(class="text-sm text-gray-600 font-bold") Habitaciones: 
            span(class="text-gray-80 font-normal")= propiedad.habitaciones
        p(class="text-sm text-gray-600 font-bold") WC: 
            span(class="text-gray-80 font-normal")= propiedad.wc
        p(class="text-sm text-gray-600 font-bold") Precio: 
            span(class="text-gray-80 font-normal")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-blue-700 text-center w-full font-bold text-white p-2 rounded uppercase block text-sm") Ver propiedad 

