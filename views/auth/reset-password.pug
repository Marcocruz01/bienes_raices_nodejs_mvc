extends ../layout/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes     
            span.font-normal.text-gray-400 Raices
        h2.text-center.text-4xl.font-bold= pagina
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow-md.rounded-md
                form(method="POST" novalidate).space-y-5
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Coloca tu nuevo Password
                        input#copasswordrpasswordreo.w-full.px-3.py-2.border.rounded-md.border-gray-300.placeholder-gray-400(placeholder="Escribe tu nuevo password aqui..." type="password" name="password")
                    if errores 
                        div(class="max-w-md mx-auto my-10")
                            each error in errores 
                                p.bg-red-600.text-white.font-bold.uppercase.text-xs.text-center.p-2.mb-1= error.msg
                    input(type="submit" value="Guardar Cambios" class="cursor-pointer w-full hover:bg-black hover:transition-all border border-black py-2 px-5 rounded-md text-black hover:text-white font-bold uppercase")